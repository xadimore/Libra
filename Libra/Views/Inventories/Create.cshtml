@model Libra.ViewModel.InventoryViewModel

@{
    ViewData["Title"] = "Inventory";
}

<h4>Add New Inventory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateRecieved" class="control-label"></label>
                <input asp-for="DateRecieved" class="form-control" />
                <span asp-validation-for="DateRecieved" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockName" class="control-label"></label>
                <select asp-for="StockName" class="form-control" asp-items="ViewBag.StockName"></select>
            </div>
            <div class="form-group">
                <label asp-for="Unit" class="control-label"></label>
                <input asp-for="Unit" class="form-control" />
                <span asp-validation-for="Unit" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <select asp-for="Location" class="form-control" asp-items="ViewBag.Location"></select>
            </div>
            <div class="form-group">
                <label asp-for="Employee" class="control-label"></label>
                <select asp-for="Employee" class="form-control" asp-items="ViewBag.Employee"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
